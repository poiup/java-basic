package game.intercation;

public class Magician {
	private int hp;
	private int mp;
	private int atk;
	private int def;
	private int exp;
	private int lv;
	
	public Magician () {
		this.hp = 10;
		this.mp = 50;
		this.atk = 10;
		this.def = 0;
		this.exp = 0;
		this.lv = 1;
	}
	public void dead() {
		System.out.println("마법사가 죽었습니다. 스텟이 초기화됩니다");
		hp = 10;
		mp = 50;
		atk = 10;
		def = 0;
		exp = 0;
		lv = 1;
	}
	public void huntOrc() {
		this.mp -= 15;
	}
}

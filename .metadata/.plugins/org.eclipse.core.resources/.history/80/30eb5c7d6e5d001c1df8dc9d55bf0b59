package game.accessmodifier;

public class Magician extends Commoner {
	private int mDam;
	
	public void hunt() {
		System.out.println("마법사가 사냥을 시작합니다.");
		// hp -= 2; 를 직접 실행할수 없으므로
		// public 인 setter을 이용합니다.
		// setHp(5) 인 경우, 기존의 값 대신 hp변수를 5로 교체해달라는 요청임
		setHp(3);
		// 경험치도 마찬가지로 setExp();
		setExp(2);
	}
	
	public Magician () {
		
	}
}

package game.intercation;

public class Orc {
	private int hp;
	private int atk;
	private int def;
	
	public Orc() {
		hp = 5;
		atk = 3;
		def = 0;
	}
	
	// doBattle은  유저의 공격력을 받아 오크의 체력을 차감합니다.
	public void doBattle(int uAtk) {
		
	}
	
	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public int getDef() {
		return def;
	}

	public void setDef(int def) {
		this.def = def;
	}
}


public class Buyer {
	private int money;
	private int mango;
	private int apple;
	
	public Buyer(int money) {
		this.money = money;
		this.mango = 0;
		this.apple = 0;
	}
	
	public void buyMango(int mango) {	
		if( Seller.getMango() < mango) {
			System.out.println("망고의 재고가 부족하여 구매할수 없습니다.");
		} else {
			System.out.println("망고를 " + mango + "개 구매합니다");
		}
	}
}

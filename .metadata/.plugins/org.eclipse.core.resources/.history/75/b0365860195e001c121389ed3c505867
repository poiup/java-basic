
package game.intercation;

public class Warrior {
	private int hp;
	private int mp;
	private int atk;
	private int def;
	private int exp;
	private int lv;
	
	public Warrior () {
		hp = 20;
		mp = 10;
		atk = 4;
		def = 1;
		exp = 0;
		lv = 1;
	}
	// 교전을 할 경우 상호간에 수치값이 교환되어야 합니다.
	// Warrior 쪽에서 Orc의 수치를 깎아주고
	// Orc쪽에서 Warrior쪽을 깎아줘야합니다.
	public void huntOrc(Orc orc) {
		// 전사가 오크를 떄리기 위해서 먼저 Orc의 doBattle을 호출합니다.
		orc.doBattle(this.atk);
		this.hp = this.hp - (orc.getAtk() - this.def);
		System.out.println("전사의 남은체력 : " + this.hp);
	}
	
	public void huntTroll(Troll Troll) {
		Troll.doBattle(atk);
		System.out.println("전사의 남은체력 : " + this.hp);
		if(Troll.getHp() <= 0) {
			System.out.println("트롤을 사냥했습니다");
			this.exp += 100;
			System.out.println("경험치가 100 올랏습니다");
			System.out.println("새로운 트롤을 찾습니다");
			Troll.setHp(30);
		} else {
			this.hp = this.hp - (Troll.getAtk() - this.def);			
		}
	}
	
	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getMp() {
		return mp;
	}

	public void setMp(int mp) {
		this.mp = mp;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public int getDef() {
		return def;
	}

	public void setDef(int def) {
		this.def = def;
	}

	public int getExp() {
		return exp;
	}

	public void setExp(int exp) {
		this.exp = exp;
	}

	public int getLv() {
		return lv;
	}

	public void setLv(int lv) {
		this.lv = lv;
	}
}

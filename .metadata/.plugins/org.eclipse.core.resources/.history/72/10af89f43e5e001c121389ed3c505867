package interaction;

public class Buyer {
	private int money;
	private int mango;
	
	public Buyer(int money) {
		this.money = money;
		this.mango = 0;
	}
	
	public void buyMango(int mango, Seller seller) {
		if(this.money < mango * 5000) {
			System.out.println("돈이 부족합니다. 현재 소지금 : " + money);
			return;
		} else {
			seller.sellMango(mango, Buyer);
			this.mango += mango;
			this.money -= mango * money;
		}
	}
}

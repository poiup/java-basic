package game.inhertance;

public class Commoner {
	// 레벨 체력 아이디 마나수치를 변수로 가집니다
	// 정보은닉이 적용되어 private 접근 제한자를 가지며
	// 레벨은 1, 체력은 20, 마나는 10이 기본값이며 아이디만 그때그때 입력 받ㅅ습니다.
	
	//생성자로 데이터를 초기화 할수 있고, getInfo()를 이용해 현재 상태를 콘솔에 출력합니다.
	
	private int lv;
	private int hp;
	private int maxHp;
	private int mp;
	private int maxMp;
	private String name;
	
	public Commoner(String name) {
		lv = 1;
		hp = 20;
		maxHp = 20;
		mp = 10;
		maxMp = 10;
		this.name = name;
	}
}

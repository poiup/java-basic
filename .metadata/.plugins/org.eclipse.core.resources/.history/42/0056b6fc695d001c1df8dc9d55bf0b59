package game.accessmodifier;

public class Commoner {
	// private요소는 자식쪽에서도 조회나 수정이 불가능합니다.
	// 보안성이 제일 뛰어나기때문에 private을 무조건 써야한다면
	// setter, getter라는 것들을 이용해 보조합니다
	
	private int lv;
	private int hp;
	private int mp;
	private int exp;
	
	public Commoner() {
		this.hp = 20;
		this.mp = 10;
		this.lv = 1;
		this.exp =0;
	}
}
